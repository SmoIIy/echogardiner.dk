---
const { title = "Title", image, order, bg_color, text_color } = Astro.props;
---

<section
    class:list={["flex justify-center items-center md:py-12 py-4"]}
    class={bg_color}
>
    <div
        class="lg:max-w-screen-lg h-full mx-auto justify-between items-center flex flex-col"
    >
        <article class="prose p-4 sm:p-8 w-full">
            <h2 class:list={["md:text-5xl text-center"]} class={text_color}>
                {title}
            </h2>
        </article>
        <div class="p-4 sm:p-0" class:list={[{ first: order }]}>
            <img
                class="aspect-[16/9] w-full object-cover"
                src="https://images.unsplash.com/photo-1606838977034-c63af9f4f026?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                alt="placeholder"
            />
        </div>
    </div>
</section>

<style>
    .first {
        order: -9999;
    }
</style>
