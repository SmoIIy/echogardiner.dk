<script>
  const copyButton = document.querySelector('.cvr');
  copyButton.addEventListener('click', () => {
    const textToCopy = copyButton.innerHTML; // Replace with your desired text
    navigator.clipboard.writeText(textToCopy)
      .then(() => {
        alert('CVR kopieret til clipboard!');
      })
      .catch(err => {
        console.error('Failed to copy text: ', err);
      });
  });
</script>
