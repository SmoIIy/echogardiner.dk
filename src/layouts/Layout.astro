---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="min-h-screen bg-main-white mx-auto">
      <slot />
    </main>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .bg-dark-blue {
    background-color: #212830;
  }
  .bg-dark-grey {
    background-color: #2d2e28;
  }
  .bg-light-brown {
    background-color: #ac651a;
  }
  .bg-dark-brown {
    background-color: #663b1e;
  }
  .bg-white {
    background-color: #f2f2f2;
  }
  .text-white {
    color: #f2f2f2;
  }
  .text-dark-blue {
    color: #212830;
  }
  .text-dark-grey {
    color: #2d2e28;
  }
  .text-light-brown {
    color: #ac651a;
  }
  .text-dark-brown {
    color: #663b1e;
  }
</style>
